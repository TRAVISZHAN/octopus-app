{
  "$schema": "https://schemas.tauri.app/config/2/capability",
  "identifier": "default",
  "description": "Default capabilities for Octopus desktop app",
  "windows": ["main"],
  "remote": {
    "urls": ["http://localhost:*", "https://localhost:*"]
  },
  "permissions": [
    "core:default",
    "core:window:default",
    "core:window:allow-show",
    "core:window:allow-hide",
    "core:window:allow-close",
    "core:window:allow-set-focus",
    "core:event:default",
    "core:event:allow-emit",
    "core:event:allow-listen",
    "shell:allow-open",
    {
      "identifier": "shell:allow-spawn",
      "allow": [
        {
          "name": "octopus-server",
          "sidecar": true,
          "args": true
        }
      ]
    },
    {
      "identifier": "shell:allow-kill"
    }
  ]
}
