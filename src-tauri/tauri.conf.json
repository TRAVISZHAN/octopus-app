{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Prism",
  "version": "1.0.0",
  "identifier": "com.prism.app",
  "build": {
    "beforeDevCommand": "cd web && NEXT_PUBLIC_APP_VERSION=$(git describe --tags --abbrev=0 2>/dev/null || git rev-parse --short HEAD 2>/dev/null || echo 'dev') pnpm run dev",
    "beforeBuildCommand": "cd web && NEXT_PUBLIC_APP_VERSION=$(git describe --tags --abbrev=0 2>/dev/null || git rev-parse --short HEAD 2>/dev/null || echo 'dev') pnpm run build",
    "devUrl": "http://localhost:3000",
    "frontendDist": "../web/out"
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "externalBin": ["binaries/prism-server"],
    "icon": [
      "icons/app-32x32.png",
      "icons/app-128x128.png",
      "icons/app-256x256.png",
      "icons/app.icns",
      "icons/app.ico"
    ],
    "resources": ["icons/tray-32x32.png"],
    "macOS": {
      "minimumSystemVersion": "10.15",
      "entitlements": null,
      "exceptionDomain": null,
      "signingIdentity": null
    },
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": ""
    },
    "linux": {
      "appimage": {
        "bundleMediaFramework": false
      }
    }
  },
  "app": {
    "windows": [
      {
        "title": "Prism",
        "label": "main",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "plugins": {
    "shell": {
      "open": true
    }
  }
}
